{
  "name": "Udacity Playback Rate",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Control playback rate of Udacity videos.",
  "permissions": ["webRequest", "webRequestBlocking", "*://www.youtube.com/embed/*"],
  "background": {
    "scripts": ["channel.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/embed/*"],
      "js": ["playback.js"],
      "all_frames": true
    },
    {
      "matches": ["*://www.udacity.com/view*"],
      "js": ["button.js"],
      "css": ["button.css"]
    }
  ]
}
